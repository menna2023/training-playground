def WriteToFile (text= '') {
   sh "date > $test && cat $text"
}   
     
pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage("build") {
            steps {
	       WriteToFile('file.tx')
	       sh 'sleep 10s'
	       WriteToFile('file.txt')
               sh 'sleep 10s'
	       WriteToFile('file.txt)
            }
        }
    }
}
