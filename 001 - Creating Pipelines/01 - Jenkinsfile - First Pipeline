pipeline {
  agent {
    docker {
      image 'alpine:latest'
    }
  } 
  stages {
    stage ('input the name') { 
      input {
        message "Name?"
      parameters {
           string(name:'NAME')
	}
   }	
    steps {
            echo "$NAME"
    }	    
    }
     stage('ask for age') {
     input{
           message "Age?"
	parameters { 
	  string(name:'AGE')
	  }
      }
      steps {
        echo "$AGE"
      }
     }
  }
  }
 }
